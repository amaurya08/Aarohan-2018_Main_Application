<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context="org.poornima.aarohan.aarohan2017.ScheduleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/day1layout"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="#ca16c1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:fontFamily="@font/comicsansmsregular"
                    android:text="Day 1"
                    android:textColor="#FFFFFFFF"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/day2layout"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="#16ca25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:fontFamily="@font/comicsansmsregular"
                    android:text="Day 2"
                    android:textColor="#FFFFFFFF"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/day3layout"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="#cab216"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:fontFamily="@font/comicsansmsregular"
                    android:text="Day 3"
                    android:textColor="#FFFFFFFF"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/day4layout"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="#1640ca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:fontFamily="@font/comicsansmsregular"
                    android:text="Day 4"
                    android:textColor="#FFFFFFFF"
                    android:textSize="30dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:alpha="0.4"
        android:background="@drawable/background_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

</RelativeLayout>




