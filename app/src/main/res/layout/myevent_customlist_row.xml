<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_button_main_transparent"
    android:weightSum="1"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="0.16"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/myeventname"
                android:textStyle="bold"
                android:textSize="18sp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/comicsansmsregular"
                android:text="200 meter boys rellay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/comicsansmsregular"
                android:layout_weight="0.5"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="20/10/2018"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:id="@+id/myeventtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/comicsansmsregular"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="20/10/2018"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:id="@+id/myeventdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/myeventlocation"
        android:layout_weight="0.84"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
