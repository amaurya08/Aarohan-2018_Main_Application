<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ec1717"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="org.poornima.aarohan.aarohan2018.FaceFilterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <org.poornima.aarohan.aarohan2018.camera.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <org.poornima.aarohan.aarohan2018.camera.GraphicOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </org.poornima.aarohan.aarohan2018.camera.CameraSourcePreview>
    </LinearLayout>
<HorizontalScrollView
    android:visibility="invisible"
    android:layout_above="@id/camerabtn_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:padding="2dp"
            android:layout_margin="3dp"
            android:id="@+id/mask1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#00000000"
            android:src="@drawable/mask_red_spece_icon"/>
        <ImageButton
            android:padding="2dp"
            android:layout_margin="3dp"
            android:id="@+id/mask2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#00000000"
            android:src="@drawable/mask_batman_icon"/>
        <ImageButton
            android:padding="2dp"
            android:layout_margin="3dp"
            android:id="@+id/mask3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#00000000"
            android:src="@drawable/mask_coll_spece_icon"/>
    </LinearLayout>
</HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/camerabtn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_img_click"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_camera_click"/>
    </RelativeLayout>
</RelativeLayout>